<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrador.javialex_lab19.MainActivity"
    android:rowCount="3"
    android:columnCount="3">
<EditText android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etxLimite"
    android:layout_columnSpan="3"
    />
    <ProgressBar android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbarProgreso"
        android:max="100"
        android:layout_columnSpan="3"
        style="?android:attr/progressBarStyleHorizontal"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar"
        android:id="@+id/btnCargar"
        android:onClick="cargar"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenar"
        android:id="@+id/btnOrdenar"
        android:onClick="ordenar"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otro Hilo"
        android:id="@+id/btnOtroHilo"
        android:onClick="ordenarHilo"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:id="@+id/btnLimpiar"
        android:onClick="limpiar"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btnCancelar"
        android:onClick="cancelar"/>
    <TextView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txvResultado"
        android:layout_columnSpan="3"/>
</GridLayout>
