<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrador.javialex_lab11.MainActivity">

    <EditText
        android:id="@+id/etxTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola 21!"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ltvLista"
        android:layout_below="@+id/etxTexto">
    </ListView>

    <ImageButton
        android:layout_width="@dimen/btn_diametro"
        android:layout_height="@dimen/btn_diametro"
        android:layout_marginBottom="@dimen/btn_margin"
        android:layout_marginRight="@dimen/btn_margin"
        android:layout_marginLeft="@dimen/btn_margin"
        android:id="@+id/btnAgregar"
        android:src="@android:drawable/ic_menu_add"
        android:background="@drawable/oval"
        android:tint="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:stateListAnimator="@anim/elavacion_boton"
        android:valueFrom="@dimen/btn_abajo"
        tools:ignore="RtlCompat"/>
</RelativeLayout>
